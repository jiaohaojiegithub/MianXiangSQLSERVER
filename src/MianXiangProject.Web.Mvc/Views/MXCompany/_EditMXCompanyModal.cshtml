@using MianXiangProject.Web.Models.Common.Modals
@model MianXiangProject.Web.Models.DataTablesViewDtos.EdtiMXCompanyViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Edit")))

<div class="modal-body">
    <form name="MXCompanyEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.MXCompanyInfo.Id" />
        <ul class="nav nav-tabs tab-nav-right" role="tablist">
            <li role="presentation" class="active"><a href="#edit-MXCompany-details" data-toggle="tab">@L("Details")</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane animated fadeIn active" id="edit-MXCompany-details">

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="CompanyName" type="text" name="CompanyName" value="@Model.MXCompanyInfo.CompanyName" required maxlength="32" minlength="2" class="validate form-control">
                                <label for="CompanyName" class="form-label">公司名</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="CompanyType" type="text" name="CompanyType" value="@Model.MXCompanyInfo.CompanyType" required maxlength="32" minlength="2" class="validate form-control">
                                <label for="CompanyType" class="form-label">公司类型</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                @*<input id="Description" type="text" name="Description" value="@Model.MXCompanyInfo.Description" maxlength="32" minlength="2" multiple class="validate form-control">*@
                                <textarea id="Description" name="Description" class="validate form-control">@Model.MXCompanyInfo.Description</textarea>
                                <label for="Description" class="form-label">@L("Description")</label>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </form>
</div>

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/MXCompany/_EdtiMXCompanyModal.js" asp-append-version="true"></script>