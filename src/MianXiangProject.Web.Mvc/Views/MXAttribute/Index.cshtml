@using MianXiangProject.Web.Startup;
@using MianXiangProject.SharedCommand;
@model MianXiangProject.Web.Models.MXAttributeViewDtos.MXAttributeViewModel
@{
    ViewBag.CurrentPageName = PageNames.MXAttribute;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/MXAttribute/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/MXAttribute/Index.js" asp-append-version="true"></script>
    </environment>
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @L("MXAttribute")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>@L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>属性名</th>

                            <th>属性值</th>
                            <th>属性类型</th>
                            <th>描述</th>
                            <th>@L("Sort")</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var viewModel in Model.MXAttributeList)
                        {
                        <tr>
                            <td>@viewModel.AttributeName</td>
                            <td>@viewModel.AttributeValue</td>
                            <td>@viewModel.AttributeType</td>
                            <td>@viewModel.Description</td>
                            <td>@viewModel.Sort</td>
                         
                            <td class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="#" class="waves-effect waves-block edit-MXAttribute" data-MXAttribute-id="@viewModel.Id" data-toggle="modal" data-target="#MXAttributeEditModal"><i class="material-icons">edit</i>@L("Edit")</a></li>
                                    <li><a href="#" class="waves-effect waves-block delete-MXAttribute" data-MXAttribute-id="@viewModel.Id" data-MXAttribute-name="@viewModel.AttributeName"><i class="material-icons">delete_sweep</i>@L("Delete")</a></li>
                                </ul>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" data-toggle="modal" data-target="#MXAttributeCreateModal">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="MXAttributeCreateModal" tabindex="-1" role="dialog" aria-labelledby="MXAttributeCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form name="MXAttributeCreateForm" role="form" novalidate class="form-validation">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <span>添加</span>
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input class="form-control" type="text" name="AttributeName" required maxlength="100">
                            <label class="form-label">属性名</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            @*<input class="form-control" type="text" name="Description" multiple maxlength="200">*@
                            <textarea id="AttributeValue" name="AttributeValue" class="validate form-control"></textarea>
                            <label class="form-label">属性值</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input class="form-control" type="text" name="AttributeType">
                            <label class="form-label">属性类型</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input class="form-control" type="text" name="Description">
                            <label class="form-label">描述</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input class="form-control" type="number" name="Sort">
                            <label class="form-label">@L("Sort")</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@L("Cancel")</button>
                        <button type="submit" class="btn btn-primary waves-effect">@L("Save")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="MXAttributeEditModal" tabindex="-1" role="dialog" aria-labelledby="MXAttributeEditModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>