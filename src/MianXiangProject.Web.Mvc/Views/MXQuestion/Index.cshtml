        </div>
    </div>
</div>

<div class="modal fade" id="MXQuestionCreateModal" tabindex="-1" role="dialog" aria-labelledby="MXQuestionCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form name="MXQuestionCreateForm" role="form" novalidate class="form-validation">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <span>@L("Add")</span>
                    </h4>
                </div>
                <div class="modal-body">
                    <ul class="nav nav-tabs tab-nav-right" role="tablist">
                        <li role="presentation" class="active"><a href="#creat-MXQuestion-details" data-toggle="tab">详情</a></li>
                        <li role="presentation"><a href="#creat-TestQuestions-Other" data-toggle="tab">关联</a></li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane animated fadeIn active" id="creat-MXQuestion-details">
                            <div class="row clearfix" style="margin-top:10px;">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <label for="QuestionType" class="form-label">题目类型</label>
                                        <div class="form-line">
                                            @Html.DropDownList("QuestionType", EnumToList<QuestionsTypeEnum>.EnumToDropDownList(), new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix" style="margin-top:10px;">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <label for="Question" class="form-label">题目</label>
                                        <div class="form-line">
                                            @*<input id="Question" type="text" name="Question" required maxlength="32" minlength="2" class="validate form-control">*@
                                            <textarea id="Question" name="Question" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                           
                            <div class="row clearfix" style="margin-top:10px;">
                                <div class="col-sm-12">
                                    @*<div class="form-group form-float">
                                            <label for="Options" class="form-label">选项</label>
                                            <div class="form-line">
                                                <input id="Options" type="text" name="Options" required maxlength="32" minlength="2" class="validate form-control">
                                            </div>
                                        </div>*@

                                    <div class="form-group form-float">
                                        <label for="Options" class="form-label">选项</label>
                                        <div class="input-group">
                                            <div class="input-group-btn" style="width:100px;">
                                                <select class="input-group-btn selectpicker" id="OptionKey" data-live-search="true">
                                                    <option data-tokens="A" value="A">A </option>
                                                    <option data-tokens="B" value="B">B </option>
                                                    <option data-tokens="C" value="C">C </option>
                                                </select>
                                            </div><!-- /btn-group -->
                                            <div class="form-line">
                                                <input id="OptionsInput" type="text" name="OptionsInput" required maxlength="32" minlength="2" class="validate form-control">
                                            </div>
                                            <div class="input-group-addon">
                                                @*<button id="AddOption" type="button" class="btn btn-primary "></button>*@
                                                <a id="AddOption" href="#"><i class="material-icons">add</i></a>
                                                <!-- Buttons -->
                                            </div>
                                        </div>

                                    </div><!-- /input-group -->
                                </div>
                            </div>
                            <div class="OptionInfo">
                                <!-- 多选项 -->

                            </div>
                            <div class="row clearfix" style="
        margin-top: 10px;
">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <label for="QuestionCate" class="form-label">题目类别</label>
                                        <div class="form-line">
                                            <input id="QuestionCate" type="text" name="QuestionCate" required maxlength="32" minlength="2" class="validate form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row clearfix" style="margin-top:10px;">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <label for="Answer" class="form-label">答案</label>
                                        <div class="form-line">
                                            @*<input id="Answer" type="text" name="Answer" required maxlength="32" minlength="2" class="validate form-control">*@
                                            <textarea id="Answer" name="Answer" class="validate form-control" cols="2"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix" style="margin-top:10px;">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <label for="Tags" class="form-label">标签</label>
                                        <div class="form-line">
                                            @*<input id="Tags" type="text" name="Tags" required maxlength="32" minlength="2" class="validate form-control">*@
                                            <input id="Tags" type="text" name="Tags" data-role="tagsinput" maxlength="100" minlength="1" multiple class="validate form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>



                        </div>

                        <div role="tabpanel" class="tab-pane animated fadeIn" id="creat-TestQuestions-Other">
                            <div class="row clearfix" style="margin-top: 10px;">
                                <div class="col-sm-12">
                                    <label for="JobId" class="form-label ">岗位</label>
                                    <div class="form-group form-float ">
                                        <div class="form-line ">
                                            <select class="selectpicker form-control" data-live-search="true" name="JobId" id="JobId">
                                                @foreach (var jobDorp in Model.MXJobList)
                                                {
                                                    <option data-tokens="@jobDorp.Id" value="@jobDorp.Id">@jobDorp.JobName</option>
                                                }

                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix" style="margin-top:10px;">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <label for="CompanyId" class="form-label">公司</label>
                                        <div class="form-line  ">
                                            <select class="selectpicker form-control" data-live-search="true" name="CompanyId" id="CompanyId">
                                                @foreach (var CompanyDorp in Model.MXCompanyList)
                                                {
                                                    <option data-tokens="@CompanyDorp.Id" value="@CompanyDorp.Id">@CompanyDorp.CompanyName</option>
                                                }

                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row clearfix" style="margin-top:10px;">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <label for="Sort" class="form-label">排序</label>
                                        <div class="form-line">
                                            <input id="Sort" type="number" name="Sort" multiple class="validate form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix" style="margin-top:10px;">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <label for="State" class="form-label">@L("State")</label>
                                        <div class="form-line">
                                            @Html.DropDownList("State", EnumToList<DataState>.EnumToDropDownList(), new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@L("Cancel")</button>
                        <button type="submit" class="btn btn-primary waves-effect">@L("Save")</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="MXQuestionEditModal" tabindex="-1" role="dialog" aria-labelledby="MXQuestionEditModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>