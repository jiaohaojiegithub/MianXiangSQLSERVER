@using MianXiangProject.Web.Models.Common.Modals
@model MianXiangProject.Web.Models.DataTablesViewDtos.EdtiMXJobViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Edit")))

<div class="modal-body">
    <form name="MXJobEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.MXJobInfo.Id" />
        <ul class="nav nav-tabs tab-nav-right" role="tablist">
            <li role="presentation" class="active"><a href="#edit-MXJob-details" data-toggle="tab">@L("Details")</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane animated fadeIn active" id="edit-MXJob-details">

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="JobName" type="text" name="JobName" value="@Model.MXJobInfo.JobName" required maxlength="32" minlength="2" class="validate form-control">
                                <label for="JobName" class="form-label">岗位名</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="JobType" type="text" name="JobType" value="@Model.MXJobInfo.JobType" required maxlength="32" minlength="2" class="validate form-control">
                                <label for="JobType" class="form-label">岗位类型</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                @*<input id="Description" type="text" name="Description" value="@Model.MXJobInfo.Description" maxlength="32" minlength="2" multiple class="validate form-control">*@
                                <textarea id="Description" name="Description" class="validate form-control">@Model.MXJobInfo.Description</textarea>
                                <label for="Description" class="form-label">@L("Description")</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="Sort" type="number" name="Sort" value="@Model.MXJobInfo.Sort" class="validate form-control">
                                <label for="Sort" class="form-label">@L("Sort")</label>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>
</div>

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/MXJob/_EdtiMXJobModal.js" asp-append-version="true"></script>